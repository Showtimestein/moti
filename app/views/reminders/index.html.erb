<% if user_signed_in? %>

<h1>My Reminders</h1>

<br>

<table class="table table-dark table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Goal</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
    <% if reminder.user == current_user%>
      <tr>
        <td>
        <%= link_to reminder.goal, reminder, class:"goal-link" %>
        </td>
        <td><%= link_to 'Delete', reminder, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<a href="<%= new_reminder_path %>" >
<button class="btn btn-secondary", border-radius: 100%>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
  </svg>
</button>
</a>

<% else %>

<div class="card text-white text-center bg-dark" >
  <div class="card-body">
    <h1 class="card-title">Welcome to Moti!</h1>
    <br>
    <p class="card-text">I am an easy to use application meant to help you keep track of your goals and keep you motivated along the way! To get started sign in or sign up.</p>
    <br>
    </div>

<% end %>